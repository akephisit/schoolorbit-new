# Neon PostgreSQL Connection
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/schoolorbit_admin?sslmode=require

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=8080
RUST_LOG=info

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://admin.yourdomain.com

# Neon API (for automated database provisioning - optional)
NEON_API_KEY=your-neon-api-key
NEON_PROJECT_ID=your-neon-project-id
