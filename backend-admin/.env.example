# Neon PostgreSQL Connection
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/schoolorbit_admin?sslmode=require

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=8080
RUST_LOG=info
# Note: CORS is handled by nginx reverse proxy

# Neon API (for automated database provisioning)
NEON_API_KEY=your-neon-api-key
NEON_PROJECT_ID=your-neon-project-id
NEON_BRANCH_ID=br-main-branch-id
NEON_HOST=your-project.neon.tech

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_ACCOUNT_ID=your-account-id
BASE_DOMAIN=schoolorbit.app

# Backend-School Communication
BACKEND_SCHOOL_URL=http://backend-school:8081
INTERNAL_API_SECRET=your-internal-secret-change-this-in-production

# Deployment
API_URL=https://school-api.schoolorbit.app
DEPLOY_SCRIPT_PATH=./scripts/deploy_tenant.sh
FRONTEND_SCHOOL_BUILD_PATH=/path/to/frontend-school/build
